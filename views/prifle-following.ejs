
<%- include('partials/header')%>

<div class="container py-md-5 container--narrow">

    <%- include('partials/flash')%>

    <%- include('partials/profileHeader')%>

    
  
    <div class="profile-nav nav nav-tabs pt-2 mb-4">
        <a href="/profile/<%= profileUsername %>" class="profile-nav-link nav-item nav-link">Posts: <%= posts ? posts.length : 0 %></a>
        <a href="/profile/<%= profileUsername %>/followers" class="profile-nav-link nav-item nav-link ">Followers: <%= followers ? followers.length : 0 %></a>
        <a href="/profile/<%= profileUsername %>/following" class="profile-nav-link nav-item nav-link active">Following: <%= followees ? followees.length : 0 %></a>
      </div>
    <div class="list-group">

    <% posts.forEach(function (post) { %>

      <a href="/post/<%= post._id %>" class="list-group-item list-group-item-action">
        <img class="avatar-tiny" src="https://gravatar.com/avatar/b9408a09298632b5151200f3449434ef?s=128">
        <strong><%= post.title %></strong> on <%= post.createdAt.getDate()%>/<%= post.createdAt.getMonth() + 1 %>/<%= post.createdAt.getFullYear()%>
      </a>

    <% }) %>
     

    </div>
  </div>

  <%- include('partials/footer')%>
